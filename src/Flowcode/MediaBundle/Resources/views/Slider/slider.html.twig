<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ol class="carousel-indicators">
        {% for entity in gallery.galleryItems %}
        <li data-target="#carousel-example-generic" data-slide-to="{{ entity.position }}" class="{% if loop.first %}active{% endif %}"></li>
        {% endfor %}
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        {% for entity in gallery.galleryItems %}
        <div class="item {% if loop.first %}active{% endif %}">
            {% set link = "#" %}
            {% if entity.page %}
                {% set link = path('page', { 'slug': entity.page.slug }) %}
            {% endif %}
            <a href="{{ link }}">
                <img src="{{ asset(entity.getMedia.getWebPath) | imagine_filter('main_slider') }}" alt="{{ entity.getMedia.name }}">
            </a>
        </div>
        {% endfor %}

    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <i class="ionicons ion-chevron-left icon-prev"></i>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <i class="ionicons ion-chevron-left icon-next"></i>
        <span class="sr-only">Next</span>
    </a>

</div>
