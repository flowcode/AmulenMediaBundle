{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}

{% block body -%}
<h1>Media list</h1>
<ul>
    <li>
        <a href="{{ path('admin_media_select_media') }}">
            Create a new entry
        </a>
    </li>
</ul>

<table class="records_list table table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Path</th>
            <th>Media Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_media_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.path }}</td>
            <td>{{ entity.mediaType }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_media_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_media_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>




{% endblock %}
