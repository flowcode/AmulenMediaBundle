{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}

{% block body -%}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            {{ 'gallery.edit.title'|trans }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin_dashboard') }}"><i class="fa fa-dashboard"></i> {{ 'home'|trans|capitalize }}</a></li>
            <li><a href="{{ path('admin_gallery') }}"><i class="fa fa-dashboard"></i> {{ 'media gallery'|trans|capitalize }}</a></li>
            <li class="active">Edit</li>

        </ol>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Edit</h3>
                <div class="box-tools">
                    <ul class="list-inline">
                        <li>
                            <a href="{{ path('admin_gallery') }}" class="btn btn-default btn-sm">
                                <i class="fa fa-arrow-left"></i> Volver
                            </a>
                        </li>
                        <li>{{ form(delete_form) }}</li>
                    </ul>
                </div>
            </div>

            <div class="box-body">
                {{ form_start(edit_form) }}
                {{ form_row(edit_form.name) }}
                {{ form_row(edit_form.enabled) }}
                {{ form_row(edit_form.tags) }}
                <div class="panel">
                    <h3>Items</h3>
                    <div class="row items" data-prototype="{{ form_widget(edit_form.galleryItems.vars.prototype)|e }}">
                        {% for item in edit_form.galleryItems %}
                            <div class="col-lg-3">
                                <div class="thumbnail">
                                    <img src="http://placehold.it/200x200" >
                                    <div class="caption">
                                        {{ form_row(item.position) }}
                                        {{ form_row(item.media.name) }}
                                        <div class="form-group">
                                            {{ form_label(item.media.path) }}
                                            <div class="col-lg-5">
                                                {{ form_widget(item.media.path) }}
                                                {{ form_errors(item.media.path) }}
                                            </div>
                                            <div class="col-lg-4">
                                                <button class="btn btn-default" type="button" id="browser-trigger">
                                                    <i class="fa fa-search" ></i>
                                                    Imagen
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        </ul>
                    </div>
                </div>
                {{ form_end(edit_form) }}

            </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('select').select2();
    </script>

{% endblock %}