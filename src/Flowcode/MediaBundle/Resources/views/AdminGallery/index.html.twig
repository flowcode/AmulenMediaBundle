{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}

{% block body -%}
{{ include('FlowcodeMediaBundle:AdminMedia:mediaHeader.html.twig') }}
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">{{ 'gallery.list.title'|trans }}</h3>
            <div class="box-tools">
                <ul class="list-inline" style="display: inline-block;">
                    <li>
                        <a href="{{ path('admin_gallery_new') }}" class="btn btn-primary btn-sm">
                            <i class="fa fa-plus"></i> New Gallery
                        </a>
                    </li>
                </ul>
                <form action="{{ path('admin_gallery') }}" method="get" class="form-inline" role="form" style="display: inline-block;">
                    <input class="form-control caja-buscar" placeholder="Buscar por nombre" type="text" name="search" value="{{ searchStr }}">
                    <select class="form-control" name="type">
                        <option value="">Tipo de galer√≠a</option>
                        <option value="gallery_slider">Slider</option>
                        <option value="gallery_product">Producto</option>
                    </select>
                    <button class="btn btn-default btn-sm" type="submit">
                        <i class="fa fa-search"></i> Buscar
                    </button>
                </form>
            </div>
        </div>
        <div class="box-body">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Slug</th>
                        <th>Enabled</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in pagination %}
                    <tr>
                        <td><a href="{{ path('admin_gallery_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td><a href="{{ path('admin_gallery_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                        <td>{{ entity.slug }}</td>
                        <td>{{ entity.enabled }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
