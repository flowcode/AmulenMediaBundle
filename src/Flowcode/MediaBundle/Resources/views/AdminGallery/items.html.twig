{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}

{% block body -%}
{{ include('FlowcodeMediaBundle:AdminMedia:mediaHeader.html.twig') }}
<section class="content">
    <div class="box box-solid">
        <div class="box-header">
            <h3 class="box-title">
                Items of {{ gallery.name }}
            </h3>
            <div class="box-tools">
                <a href="{{ path('admin_gallery_item_new', { 'id' : gallery.id }) }}" class="btn btn-xs btn-link">
                    <i class="fa fa-plus"></i> {{ "add item"|trans }}
                </a>
            </div>
        </div>
        <div class="box-body">
            <table class="records_list table table-condensed">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>{{ 'position'|trans }}</th>
                        <th>{{ 'name'|trans }}</th>
                        <th>{{ 'path'|trans }}</th>
                        <th>{{ 'actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for galleryitem in items %}
                    <tr>
                        <td><a href="{{ path('admin_gallery_show', { 'id': galleryitem.id }) }}">{{ galleryitem.id }}</a></td>
                        <td>{{ galleryitem.position }}</td>
                        <td>{{ galleryitem.media.name }}</td>
                        <td>{{ galleryitem.media.path }}</td>
                        <td>
                            <ul class="list-inline">
                                <li>
                                    <a href="{{ path('admin_gallery_item_edit', { 'id' : galleryitem.id }) }}">
                                        {{ 'edit'|trans }}
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_gallery_item_remove', { 'id' : galleryitem.id }) }}">
                                        {{ 'delete'|trans }}
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>
{% endblock %}
