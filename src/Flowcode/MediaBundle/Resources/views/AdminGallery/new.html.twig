{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}

{% block body -%}

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            {{ 'gallery.create.title'|trans }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin_dashboard') }}"><i class="fa fa-dashboard"></i> {{ 'home'|trans|capitalize }}</a></li>
            <li><a href="{{ path('admin_gallery') }}"><i class="fa fa-dashboard"></i> {{ 'media gallery'|trans|capitalize }}</a></li>
            <li class="active">Create</li>

        </ol>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Create</h3>
                <div class="box-tools">
                    <ul class="list-inline">
                        <li>
                            <a href="{{ path('admin_gallery') }}" class="btn btn-default btn-sm">
                                <i class="fa fa-arrow-left"></i> Volver
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="box-body">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.enabled) }}
                {{ form_row(form.tags) }}
                <div class="panel">
                    <h3>Items</h3>
                    <div class="row items" data-prototype="{{ form_widget(form.galleryItems.vars.prototype)|e }}">
                        {% for item in form.galleryItems %}
                            <div class="col-lg-3">
                                <div class="thumbnail">
                                    <img src="http://placehold.it/200x200" >
                                    <div class="caption">
                                        {{ form_row(item.position) }}
                                        {{ form_row(item.media.name) }}
                                        <div class="form-group">
                                            {{ form_label(item.media.path) }}
                                            <div class="col-lg-5">
                                                {{ form_widget(item.media.path) }}
                                                {{ form_errors(item.media.path) }}
                                            </div>
                                            <div class="col-lg-4">
                                                <button class="btn btn-default" type="button" id="browser-trigger">
                                                    <i class="fa fa-search" ></i>
                                                    Imagen
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        </ul>
                    </div>
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('select').select2();
        var $collectionHolder;

        var $addTagLink = $('<a href="#" class="add_tag_link btn btn-default"><i class="fa fa-plus"></i> Add a item</a>');
        var $newLinkLi = $('<li></li>').append($addTagLink);

        function addTagForm($collectionHolder, $newLinkLi) {
            // Get the data-prototype explained earlier
            var prototype = $collectionHolder.data('prototype');

            // get the new index
            var index = $collectionHolder.data('index');

            // Replace '__name__' in the prototype's HTML to
            // instead be a number based on how many items we have
            var newForm = prototype.replace(/__name__/g, index);

            // increase the index with one for the next item
            $collectionHolder.data('index', index + 1);

            // Display the form in the page in an li, before the "Add a tag" link li
            var $newFormLi = $('<div></div>').append(newForm);
            $newLinkLi.before($newFormLi);
        }

        jQuery(document).ready(function () {
            $collectionHolder = $('div.items');

            $collectionHolder.append($newLinkLi);

            $collectionHolder.data('index', $collectionHolder.find(':input').length);

            $addTagLink.on('click', function (e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();

                // add a new tag form (see next code block)
                addTagForm($collectionHolder, $newLinkLi);
            });
        });
    </script>

{% endblock %}